<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="8"
    android:padding="10dp"
    android:background="@drawable/item_border"
    android:layout_marginTop="2dp">

    <TextView
        android:id="@+id/tvDeliveryNoteCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:text="71312264"/>

    <TextView
        android:id="@+id/tvDeliveryNoteDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:text="HONEST CAPUCHINO\n24CL"/>

    <TextView
        android:id="@+id/tvDeliveryNoteQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="12"/>

    <TextView
        android:id="@+id/tvDeliveryNotePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:text="0.840000"/>


</LinearLayout>